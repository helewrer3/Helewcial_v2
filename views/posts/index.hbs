<h1>Posts</h1>
<div class="row">
    {{#each data}}
        <div class="col s12 m4">
            <div class="card">
                <div class="card-content center-align">
                    <h5>{{title}}</h5>
                    {{{truncate body 200}}}
                    <div class="chip">
                        <img src="{{user.image}}" alt="">
                        {{user.displayName}}
                    </div>
                </div>
                <div class="card-action center-align">
                    <a href="/posts/show/{{_id}}" class="btn blue lighten-2">Read More</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>